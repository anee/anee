parameters:
  vendorDir: %appDir%/../vendor

services:
	wlCssFilter: WebLoader\Filter\CssUrlsFilter(%wwwDir%)
	cssMin: App\WebLoader\CssMinFilter
	lessFilter: WebLoader\Filter\LessFilter
	jsMin: App\WebLoader\JsMinFilter

extensions:
	webloader: WebLoader\Nette\Extension

webloader:

		# application CSS
		css:
			default:
				files:
					# /Controls
					- {files: ["*.css", "*.less"], from: %appDir%/Modules/} # Nette\Utils\Finder support

					- app.css
				filters:
					- @cssMin
					- @wlCssFilter

				fileFilters:
					- @lessFilter

		# application JS
		js:
			default:
				files:
					# /Controls
					- {files: ["*.js"], from: %appDir%/Modules/} # Nette\Utils\Finder support

					- %vendorDir%/nette/forms/src/assets/netteForms.js
					- jquery-2.1.1.min.js
					- nette.ajax.js
					- less.min.js
					- app.js
				filters:
					- @jsMin