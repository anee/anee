
{form signInForm}

    <div class="sign-box">

        <h1>Sign in</h1>

	    <ul class="errors" n:if="$form->hasErrors()">
            <li n:foreach="$form->errors as $error">{$error}</li>
        </ul>

        {input usernameOrEmail class => normal}
        {input password class => beforeCheckbox}
        {input remember}
        {input send}
    </div>
{/form}